  hosts:
    target01:
      vars:  # hostごとの変数
        ansible_port: 2222
        ansible_user: hoge
        ansible_become_password: password01
    target02:
      vars:  # hostごとの変数
        ansible_port: 2223
        ansible_user: foo
        ansible_become_password: password02
  vars:  # 共通の変数
    ansible_ssh_private_key_file: ~/.ssh/test_key
